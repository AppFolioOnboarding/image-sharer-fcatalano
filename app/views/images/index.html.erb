<h1>Images</h1>

<table>
  <thead>
    <%= link_to 'New Image', new_image_path %>
  </thead>

  <tbody>
  <% @images.reverse_each do |image| %>
    <tr>
      <td>
        <%= link_to image_path(image) do %>
          <%= image_tag image.url, class: 'image', skip_pipeline: true %>
        <% end %>
        <%= image.tag_list.join(', ') %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
